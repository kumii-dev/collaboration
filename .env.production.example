# ==============================================
# PRODUCTION ENVIRONMENT VARIABLES FOR VERCEL
# ==============================================
# Copy these to your Vercel project environment variables

# === BACKEND API (apps/api) ===

NODE_ENV=production
PORT=3001
API_URL=https://your-api-project.vercel.app

# Supabase
SUPABASE_URL=https://xxxxxxxxxxxxx.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
SUPABASE_STORAGE_BUCKET=collaboration-attachments

# Security
JWT_SECRET=your_secure_random_string_minimum_32_characters_here
SESSION_SECRET=your_secure_random_string_minimum_32_characters_here

# CORS (set to your frontend URL)
CORS_ORIGIN=https://your-web-project.vercel.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# File Upload Settings
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf
MAX_FILE_SIZE_MB=10

# Email (Optional - only if using email features)
# RESEND_API_KEY=re_your_resend_api_key
# RESEND_FROM_EMAIL=noreply@yourdomain.com

# === FRONTEND WEB (apps/web) ===

VITE_API_URL=https://your-api-project.vercel.app/api
VITE_SUPABASE_URL=https://xxxxxxxxxxxxx.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here
VITE_APP_NAME=Kumii Collaboration
VITE_APP_URL=https://your-web-project.vercel.app
VITE_ENABLE_REALTIME=true
VITE_ENABLE_NOTIFICATIONS=true

# ==============================================
# HOW TO USE:
# ==============================================
# 1. Replace all placeholder values with your actual values
# 2. Generate secure secrets for JWT_SECRET and SESSION_SECRET:
#    node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# 3. Add these to Vercel via dashboard or CLI:
#    vercel env add VARIABLE_NAME
# 4. Redeploy after adding environment variables
